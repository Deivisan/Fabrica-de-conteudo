{
  "name": "fabrica-de-conteudo",
  "version": "2.0.0",
  "type": "module",
  "description": "Sistema de automacao de browser para geracao de conteudo com IAs gratuitas",
  "author": "Deivison Santana (@deivisan)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Deivisan/Fabrica-de-conteudo"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:quick": "bun run tests/quick-test.ts",
    "build": "bun build src/index.ts --outdir=dist",
    "typecheck": "tsc --noEmit",
    "ai:test": "bun run core/ai-interaction.ts",
    "ai:gemini": "bun run core/ai-interaction.ts gemini",
    "ai:bing": "bun run core/ai-interaction.ts bing",
    "browser:setup": "bun run core/browser-engine.ts --setup",
    "browser:check": "bun run core/browser-engine.ts --check",
    "generate:image": "bun run generators/image-generator.ts",
    "generate:text": "bun run generators/text-generator.ts",
    "campaign": "bun run generators/campaign-generator.ts"
  },
  "dependencies": {
    "playwright": "^1.50.0",
    "puppeteer": "^24.0.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "ai",
    "automation",
    "content-generation",
    "browser-automation",
    "gemini",
    "imagen",
    "bun"
  ]
}
